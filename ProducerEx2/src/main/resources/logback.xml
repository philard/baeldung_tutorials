<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <logger name="com.websystique.spring.configuration.ProducerApplication" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.websystique.spring.service.ProductServiceImpl" level="debug"/>
    <!--<logger name="org.apache.activemq.transport.WireFormatNegotiator" level="debug"/>-->

    <logger name="com.websystique.spring.messaging.MessageReceiver" level="debug"/>


    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>